---
import SlideCard, { type Slide } from './SlideCard.astro'

interface Tag {
  tag: string
  count?: number
  size: number
}

interface Props {
  slides: Slide[]
  tags: Tag[]
  tag: string
}

const { slides, tags, tag } = Astro.props
---

<div>
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-6">
      <a
        href="/slides"
        class:list={[
          "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors h-8 px-3",
          !tag
            ? "text-accent border border-accent"
            : "text-foreground/60 border border-foreground/20 hover:text-accent hover:border-accent"
        ]}
      >
        All
      </a>
      {tags.map((t) => (
        <a
          href={`/slides?tag=${t.tag}`}
          class:list={[
            "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors h-8 px-3",
            tag === t.tag
              ? "text-accent border border-accent"
              : "text-foreground/60 border border-foreground/20 hover:text-accent hover:border-accent"
          ]}
        >
          {t.tag}
          {t.count && <span class="ml-1 text-xs opacity-60">({t.count})</span>}
        </a>
      ))}
    </div>
  )}
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">
    {
      slides.map((slide) => (
        <a href={`/slides/${slide.id}`} class="block no-underline">
          <SlideCard slide={slide} />
        </a>
      ))
    }
  </div>

  {
    slides.length === 0 && (
      <div class="text-center py-12">
        <div class="text-[var(--theme-foreground)] opacity-60 text-lg">No slides found</div>
      </div>
    )
  }
</div>
